{
    "manifest_version": 3,
    "name": "Advanced Trustworthiness Checker",
    "version": "2.0",
    "description": "Advanced website trustworthiness checks including SSL, reputation, phishing detection, and blacklists.",
    "permissions": ["activeTab", "scripting", "webRequest", "webRequestBlocking"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  